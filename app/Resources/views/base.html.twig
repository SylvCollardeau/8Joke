<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>
        {% block title %}
            Welcome!
        {% endblock %}
        </title>

        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('bootstrap-3.3.7/css/bootstrap.min.css') }}"/>
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <header>
            <nav class="navbar navbar-inverse navbar-fixed-top bg-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                      <a class="navbar-brand" href="{{ path('home') }}">8Joke</a>
                    </div>

                    <div class="collapse navbar-collapse">
                      <ul class="nav navbar-nav">
                        <li><a href="{{ path('home') }}">Home</a></li>
                        <li><a href="#">Post</a></li>
                         

                      {% if app.user %}
                      <ul class="nav navbar-nav">
                        <li><a>Connected as {{ app.user.username }}</a></li>
                        <li><a href="{{ path('logout') }}">Log-out</a></li>
                      </ul>
                      {% else %}
                      <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('login') }}">Sign-in</a></li>
                        <li><a href="#">Sign-up</a></li>
                      </ul>
                      {% endif %}
                    </div>
                     
              </div>
            </nav>
        </header>
   

    <body>
        

        {% block body %}
        {% endblock %}

        
        {% block javascripts %}
        <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('bootstrap-3.3.7/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>

    
</html>
