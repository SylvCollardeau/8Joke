{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
<div class="col-lg-3 col-lg-push-4">
<form class="form-horizontal" method="post">
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.username) }}
        <div class="col-lg-10">
            {{ form_errors(form.username, { 'attr': {'class': 'help-block'} }) }}
            {{ form_widget(form.username) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.password.first) }}
        <div class="col-lg-10">
            {{ form_errors(form.password.first, { 'attr': {'class': 'help-block'} }) }}
            {{ form_widget(form.password.first) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.password.second) }}
        <div class="col-lg-10">
            {{ form_errors(form.password.second, { 'attr': {'class': 'help-block'} }) }}
            {{ form_widget(form.password.second) }}
        </div>
    </div>

     <div class="form-group">
        {{ form_widget(form.save) }}
    </div>
</div>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style type="text/css" rel="stylesheet">
	body{
		padding-top: 100px;
	}
</style>
{% endblock %}